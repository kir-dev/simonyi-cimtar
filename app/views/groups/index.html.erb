<%- model_class = Group -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:founded) %></th>
    <th><%= model_class.human_attribute_name(:url) %></th>
    <th><%= model_class.human_attribute_name(:mail_list) %></th>
    <th><%= model_class.human_attribute_name(:shortname) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.id, group_path(group) %></td>
        <td><%= group.name %></td>
        <td><%= group.founded %></td>
        <td><%= group.url %></td>
        <td><%= group.mail_list %></td>
        <td><%= group.shortname %></td>
        <td><%= l group.created_at %></td>
        <td>
          <%= link_to t('edit'),
                      edit_group_path(group), :class => 'btn btn-mini' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('new'),
            new_group_path,
            :class => 'btn btn-primary' %>
