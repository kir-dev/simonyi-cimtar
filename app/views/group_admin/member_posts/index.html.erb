<h2><%= @membership.member.full_name %> posztjai a 
  <%= @membership.group.shortname %> körben</h2>

<table class="table">
  <thead>
    <tr>
      <th>Megnevezés</th>
      <th>Jogosultságok</th>
      <th>Aktív</th>
      <th><%= t "operations" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @membership.posts.empty? %>
      <p>Ennek a tagnak nincsenek posztjai a körön belül</p>
    <% end -%>

    <% @membership.posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <ul>
            <% post.permissions.each do |perm| %>
              <li>
                <span><%= t("resources." + perm.resource) %></span>
                <span>(<%= ability_list(perm) %>)</span>
              </li>
            <% end -%>
          </ul>
        </td>
        <td><%= check_box_tag "active", "1", post.to_date.nil?, disabled: true %></td>
        <td>
          <%= link_to t("edit"), edit_group_admin_membership_post_path(@membership, post) %>
          <%= link_to t("destroy"), group_admin_membership_post_path(@membership, post), confirm: t("messages.are_you_sure"), method: :delete %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= content_for :operations do %>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header"><%= t "operations" %></li>
      <li><%= link_to "Új poszt", new_group_admin_membership_post_path(@membership) %></li>
    </ul>
  </div>
<% end -%>
