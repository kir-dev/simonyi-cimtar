<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @member.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @member.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @member.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:room) %>:</strong></dt>
  <dd><%= @member.room %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @member.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:intro) %>:</strong></dt>
  <dd><%= @member.intro %></dd>
  <dt><strong><%= model_class.human_attribute_name(:univ_year) %>:</strong></dt>
  <dd><%= @member.univ_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hobby) %>:</strong></dt>
  <dd><%= @member.hobby %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deleted) %>:</strong></dt>
  <dd><%= @member.deleted %></dd>
  <dt><strong><%= model_class.human_attribute_name(:login) %>:</strong></dt>
  <dd><%= @member.login %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nick) %>:</strong></dt>
  <dd><%= @member.nick %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              members_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_path(@member), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_path(@member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
